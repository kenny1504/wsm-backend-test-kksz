{% extends 'base.html.twig' %}

{% block title %}Hello ReportsController!{% endblock %}

 {% block stylesheets %}
   <link href="{{ asset('bootstrap-5/css/bootstrap.css') }}" rel="stylesheet"/>
 {% endblock %}

 {% block javascripts %}
   <script src="{{ asset('bootstrap-5/js/bootstrap.js') }}"></script>
   <script src="{{ asset('jquery/jquery.js') }}"></script>
   <script src="{{ asset('data.js') }}"></script>
   
   
 {% endblock %}


{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 1250px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .btn-info { background-color: #0e8b82}
    input {
        border-top-style: hidden!important;
        border-right-style: hidden!important;
        border-left-style: hidden!important;
        border-bottom-style: groove!important;
        background-color: #f9f9f9!important;
    }
    .no-outline:focus {
        outline: none!important;
    }
    .text-body-page {
        color: #737b83 !important;
    }
    #reports caption {
        caption-side: top;
    }
</style>

<div class="example-wrapper ">
    <h1>Hello {{ controller_name }}! âœ…</h1>

    <div class="row mt-3 text-body-page">
      <span>Please enter The Account ID you'd like to display: </span>
      <div class="col-md-3">
          <input id="fin-id-account" type="text" class="no-outline form-control" placeholder="Account ID">
          <button class="btn-sm btn-info text-white m-1" onclick="getdata(1)">GET DATA </button>
          <button class="btn-sm btn-info text-white m-1" onclick="getdata(-1)">SHOW ALL </button>
      </div>
  </div>

    <div class="row pt-3 ">
      <table id="reports" class="table table-hover text-body-page">
          <thead>
              <caption>Aggregated perfomance for all <b>ACTIVE</b> accounts is listed below:</caption>
              <tr>
                  <th scope="col">Account Name</th>
                  <th scope="col">Account ID</th>
                  <th scope="col">Spend</th>
                  <th scope="col">Clicks</th>
                  <th scope="col">Impresions</th>
                  <th scope="col">Cost per Click</th>
              </tr>
          </thead>
          <tbody id='tbodytable'>
             
          </tbody>
      </table>
  </div>
   
</div>
{% endblock %}
